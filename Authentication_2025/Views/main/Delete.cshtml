@model Authentication_2025.Models.Fruit_Table
@{
	ViewData["Title"] = "Delete";
}

<h1>Delete</h1>
<h1 class="text-danger">Are you sure , you want to delete this data?</h1>

<form method="post" asp-action="DeleteConfirmed">

	<input asp-for="Id" hidden />
	<div class="border p-3">

		<div class="form-group row">


			<h2 class="text-info pl-3">Delete Fruits</h2>



		</div>

		<div class="row">
			<div class="col-8">

				<div class="from-group row">

					<div class="col-4">

						<lable>User : </lable>

					</div>
					<div class="col-8">

						<input asp-for="UserOfFruit" class="form-control" disabled />

					</div>
				</div>
				<br />

				<div class="form-group row">
					<div class="col-4">

						<label>Fruits Name : </label>

					</div>
					<br />
					<div class="col-8">
						<input asp-for="FruitName" class="form-control" disabled />

					</div>
				</div>
				<br />
				<div class="form-group row">
					<div class="col-4">

						<label>Quentity : </label>

					</div>
					<br />
					<div class="col-8">
						<input asp-for="Quantity" class="form-control" disabled />

					</div>

				</div>
				<br />

				<div class="form-group row">
					<div class="col-8 offset-4 row">
						<div class="col">

							<input type="submit" class="btn btn-danger w-100" value="Delete" />

						</div>

						<div class="col">
							<a asp-action="Index" class="btn btn-success w-100">Back</a>

						</div>
					</div>


				</div>



			</div>

		</div>




	</div>





</form>