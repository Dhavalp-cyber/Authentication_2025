@model Authentication_2025.Models.User

@{
    ViewData["Title"] = "Edit User";
}

<link rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white text-center rounded-top-4">
                    <h3 class="mt-2"><i class="fa-solid fa-user-pen"></i> Edit User</h3>
                </div>

                <div class="card-body p-4">

                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <input type="hidden" asp-for="UserId" />

                        <!-- Username -->
                        <div class="mb-3">
                            <label asp-for="Username" class="form-label fw-bold"></label>
                            <div class="input-group">
                                <span class="input-group-text bg-light">
                                    <i class="fa-solid fa-user"></i>
                                </span>
                                <input asp-for="Username" class="form-control" placeholder="Enter username" />
                            </div>
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        <!-- Email -->
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-bold"></label>
                            <div class="input-group">
                                <span class="input-group-text bg-light">
                                    <i class="fa-solid fa-envelope"></i>
                                </span>
                                <input asp-for="Email" class="form-control" placeholder="Enter email" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <!-- Mobile -->
                        <div class="mb-3">
                            <label asp-for="Mobile" class="form-label fw-bold"></label>
                            <div class="input-group">
                                <span class="input-group-text bg-light">
                                    <i class="fa-solid fa-phone"></i>
                                </span>
                                <input asp-for="Mobile" class="form-control" placeholder="Enter mobile number" />
                            </div>
                            <span asp-validation-for="Mobile" class="text-danger"></span>
                        </div>

                        <!-- Password -->
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label fw-bold"></label>
                            <div class="input-group">
                                <span class="input-group-text bg-light">
                                    <i class="fa-solid fa-lock"></i>
                                </span>
                                <input asp-for="Password" class="form-control" placeholder="Enter new password" />
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <!-- Role -->
                        <div class="mb-3">
                            <label asp-for="Rolesname" class="form-label fw-bold"></label>
                            <div class="input-group">
                                <span class="input-group-text bg-light">
                                    <i class="fa-solid fa-user-shield"></i>
                                </span>
                                <input asp-for="Rolesname" class="form-control" placeholder="Enter role name" />
                            </div>
                            <span asp-validation-for="Rolesname" class="text-danger"></span>
                        </div>

                        <!-- Active -->
                        <div class="form-check form-switch mb-4">
                            <input class="form-check-input" asp-for="IsActive" />
                            <label asp-for="IsActive" class="form-check-label fw-bold ms-2"></label>
                        </div>

                        <!-- Buttons -->
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fa-solid fa-floppy-disk"></i> Save Changes
                            </button>

                            <a asp-action="GetData" class="btn btn-outline-secondary btn-lg">
                                <i class="fa-solid fa-arrow-left"></i> Back to List
                            </a>
                        </div>

                    </form>

                </div>
            </div>

        </div>
    </div>
</div>
